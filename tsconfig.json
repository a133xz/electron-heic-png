{
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "baseUrl": ".",
        "noEmit": true,
        "jsx": "preserve",
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue"
    ],
    "exclude": [
        "assets",
        "node_modules",
        "*.js"
    ],
    "outDir": "./dist"
}